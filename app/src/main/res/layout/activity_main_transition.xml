<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="旧方法转场动画"/>
    <Button
        android:id="@+id/transition_old"
        android:text="需要自己写xml，好麻烦"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新方法转场动画"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/transition_new_explode"
            android:text="爆炸效果"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:transitionName="explode"/>

        <Button
            android:id="@+id/transition_new_slide"
            android:text="滑动效果"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:transitionName="slide"/>

        <Button
            android:id="@+id/transition_new_fade"
            android:text="隐藏效果"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:transitionName="fade"/>

        <Button
            android:id="@+id/transition_new_share"
            android:text="共享效果"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:transitionName="share"/>

    </LinearLayout>



</LinearLayout>